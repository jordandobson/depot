<h1>Editing user</h1>

<% form_for(@user) do |f| %>
  <%= f.error_messages %>

  <p>
    <%= f.label :name %><br />
    <%= f.text_field :name %>
  </p>
    <%= f.hidden_field :hashed_password %>
    <%= f.hidden_field :salt %>
  <p>
    <%= f.submit "Update" %>
  </p>
<% end %>
<%= link_to 'Back', users_path %>
